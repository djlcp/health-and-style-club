<style>
  .subs{
    text-align: center;
    padding-bottom: 0px;
    margin-bottom: 0;
    text-decoration: none;
  }

  .subsa {
    text-align: center;
    padding-bottom: 10px;
    text-decoration: none;
  }
  .subscription-container {
    background-color: #fff;
    border: #EFEFEF 2px solid;
  }

    .subscont {
    background-color: #fff;
    border: #fff 0px solid !important;
  }
</style>


<div class="subscription-wrapper">
  <div class="subscription-page-container">
    <div class="subscription-container subscont col-md-10 col-xs-12">

<!--          !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
<!--          !!!!!!!!ACTIVE SUBSCRIPTION!!!!!!!!!!-->
<!--          !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
        <% if @paid %>
          <div class="subscription-container" style="flex-direction: column">
            <h1 class="subs" style="padding-bottom: 20px; width: 100%">Your subscription is active </h1>
            <h2 class="subs">Subscription Id</h2>
            <p class="subsa"><%= @subscription_id.id %></p>
            <h2 class="subs">User ID</h2>
            <p class="subsa"><%= @subscription_id.user_id %></p>
            <h2 class="subs">Chargebee ID</h2>
            <p class="subsa"><%= @subscription_id.chargebee_id %></p>
            <a href="javascript:void(0)" data-cb-type="portal" class="btn btn-primary btn-lg subscription-button mt-5" style="width: 100%">Manage subscription</a>
          </div>
        <% end %>

<!--          !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
<!--          !!!!!!!INACTIVE SUBSCRIPTION!!!!!!!!!-->
<!--          !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->

        <% if @paid == false%>
          <div class="subscription-container" style="flex-direction: column">
            <h1 class="subs" style="padding-bottom: 20px; width: 100%">Your subscription is inactive </h1>
            <h2 class="subs">Subscription Id</h2>
            <p class="subsa"><%= @subscription_id.id %></p>
            <h2 class="subs">User ID</h2>
            <p class="subsa"><%= @subscription_id.user_id %></p>
            <h2 class="subs">Chargebee ID</h2>
            <p class="subsa"><%= @subscription_id.chargebee_id %></p>
            <a href="javascript:void(0)" data-cb-type="checkout" data-cb-plan-id="premium" class="btn btn-primary btn-lg subscription-button mt-5" style="width: 100%">Subscribe</a>
          </div>
        <% end %>




<!--          !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
<!--          !!!!!!!!!!NO SUBSCRIPTION!!!!!!!!!!!!-->
<!--          !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
      <% if ! @subscription %>
        <div class="subscription-container" style="flex-direction: column">
          <h1 class="subs" style="padding-bottom: 20px;">Subscriptions </h1>
          <h2 class="subs">Why should you subscribe?</h2>
          <p class="subs">Reason 1</p>
          <p class="subs">Reason 1</p>
          <p class="subs">Reason 1</p>
          <a href="javascript:void(0)" data-cb-type="checkout" data-cb-plan-id="premium" class="btn btn-primary btn-lg subscription-button mt-5" style="width: 100%">Subscribe</a>
        </div>
      <% end %>



    </div>
  </div>
</div>
