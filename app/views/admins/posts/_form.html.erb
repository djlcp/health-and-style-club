<%= form_for [:admins, @post] do |form| %>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group filechoose">
    <%= form.label :Hero_image %><br>
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label :post_description %><br>
    <%= form.text_field :post_description %>
  </div>

  <div class="form-group">
    <%= form.label :category %><br>
    <%= form.select(
      :category,
      options_for_select(Post.categories.keys.map {|category| [category.humanize, category]}),
      { prompt: true },
      class: 'form-control'
    ) %>
  </div>

  <div class="form-group">
    <%= form.label :sub_category %><br>
    <%= form.select(
      :sub_category,
      options_for_select(Post.sub_categories.keys.map {|category| [category.humanize, category]}),
      { prompt: true },
      class: 'form-control'
    ) %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %><br>
    <%= form.select(
      :user_id,
      options_for_select(User.contributor.map {|user| [user.full_name, user.id]}),
      { prompt: true },
      class: 'form-control'
    ) %>
  </div>

  <div class="form-group">
    <div class="pretty p-default p-round">
      <%= form.check_box :paid_for %>
      <div class="state p-danger-o">
        <%= form.label :paid_for, 'Is this post only for paying users?' %>
      </div>
    </div>
  </div>

  <div class="form-group" data-no-turbolink>
    <%= form.cktext_area :body_text, id: "ckeditor",  cols: 100, ckeditor: { toolbar: 'mini' } %>
  </div>

  <div class="form-group button" >
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>

<% end %>

<script>
  CKEDITOR.replace('ckeditor')
</script>
