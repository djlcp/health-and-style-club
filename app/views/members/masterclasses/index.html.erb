<div class="content-section">
  <div class="content-wrap">

    <% if @masterclasses.present? %>
      <% masterclass = @masterclasses.first %>

      <div class="masterclass-hero js-masterclass-image" style="background-image: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)), url(<%= masterclass.preview_url %>)">
        <div class="masterclass-hero__left">
          <h2 class="js-masterclass-title"><%= masterclass.title %></h2>
          <p class="js-masterclass-description"><%= masterclass.text %></p>
          <div class="author-box">
            <div class="mb-3">
              <%= image_tag masterclass.user.bioavatar.avatar, class: 'js-expert-image', style: 'height: 100px; width: 100px; border-radius: 50%;' %>
            </div>
            <h5 class="mb-3"><%= masterclass.user.full_name %></h5>
            <p>
              <%= masterclass.user.bio %>
            </p>
          </div>
          <div class="d-flex">
            <%= link_to 'Go to Masterclass', members_masterclass_path(masterclass), class: 'btn btn-pink js-masterclass-link mt-3' %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="js-masterclass-slider mt-5" data-ids="<%= @masterclasses.map(&:id) %>">
      <% @masterclasses.each do |masterclass| %>
        <div style="background-image: url(<%= masterclass.preview_url %>); background-position: center;" class="masterclass-slider">
          <div class="masterclass-slider__inner">
            <h5><%= masterclass.title %></h5>
            <p>Expert: <%= masterclass.user.full_name %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>