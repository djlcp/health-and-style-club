<div class="slideshow-background-color">
  <div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <div class="expertbar-numbertext">1 / 3</div>
      <%= image_tag('expert-test-image.png', class: "expert-image") %>
    </div>

    <div class="mySlides fade">
      <div class="expertbar-numbertext">2 / 3</div>
      <%= image_tag('expert-test-image.png', class: "expert-image") %>
    </div>

    <div class="mySlides fade">
      <div class="expertbar-numbertext">3 / 3</div>
      <%= image_tag('expert-test-image.png', class: "expert-image") %>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev js-prev" data-number="-1">&#10094;</a>
    <a class="next js-next" data-number="1">&#10095;</a>
  </div>
</div>
