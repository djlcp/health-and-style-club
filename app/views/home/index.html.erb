<html>
<body>

  <h1>This is our home page</h1>

<!-- Slideshow container -->
<div class="slideshow-background-color">
  <div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <div class="expertbar-numbertext">1 / 3</div>
      <div class="post">
        <%= image_tag('circle.png', class: "circle")%>
        <div>
          <h2>Expert Name</h2>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. In at dapibus turpis. Etiam vel justo urna.</p>
        </div>
      </div>
    </div>

    <div class="mySlides fade">
      <div class="expertbar-numbertext">2 / 3</div>
      <%= image_tag('expert-test-image.png', class: "expert-image") %>
    </div>

    <div class="mySlides fade">
      <div class="expertbar-numbertext">3 / 3</div>
      <%= image_tag('expert-test-image.png', class: "expert-image") %>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev js-prev" data-number="-1">&#10094;</a>
    <a class="next js-next" data-number="1">&#10095;</a>
  </div>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <span class="dot js-dot" data-number="1"></span>
  <span class="dot js-dot" data-number="2"></span>
  <span class="dot js-dot" data-number="3"></span>
</div>

  <% if current_user %>
    <p>Welcome <%= current_user.email %></p>
  <% end %>
</body>

</html>
