<html>

<head>
</head>

<body>

  <h1>This is our home page</h1>

<!-- Slideshow container -->
<div class="slideshow-background-color">
  <div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <div class="numbertext">1 / 3</div>
      <%= image_tag('expert-test-image.png', style: "width:100%") %>
      <div class="text">Expert 1</div>
    </div>

    <div class="mySlides fade">
      <div class="numbertext">2 / 3</div>
      <%= image_tag('expert-test-image.png', style: "width:100%") %>
      <div class="text">Expert 2</div>
    </div>

    <div class="mySlides fade">
      <div class="numbertext">3 / 3</div>
      <%= image_tag('expert-test-image.png', style: "width:100%") %>
      <div class="text">Expert 3</div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <span class="dot" onclick="currentSlide(1)"></span> 
  <span class="dot" onclick="currentSlide(2)"></span> 
  <span class="dot" onclick="currentSlide(3)"></span> 
</div>

  <p><%= link_to 'Check all the posts', posts_path %></p>

  <% if current_user %>
    <p>Welcome <%= current_user.email %> <%= link_to 'Logout', destroy_user_session_path, method: :delete %></p>
  <% end %>

  <% if current_user.role == "admin" %>
    <p>welcome administrator <%= link_to 'login', users_path %></p>
  <% end %>
  <%=render 'layouts/footer' %>
  <script src="banner.js"></script>
</body>

</html>