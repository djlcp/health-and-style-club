<%= devise_error_messages! %>
<div class="container padding-top-bottom">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <header class="card-header">
          <%= link_to "Log In", new_user_session_path, class: 'btn btn-outline-primary mt-1' %>
          <%= link_to "Reset Password", new_user_password_path, class: 'float-right btn btn-outline-primary mt-1' %>
        </header>

        <div class="card-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="w-75" style="margin:auto">
              <h4 class="text-center mt-2">Sign Up</h4>


              <div class="form-row">
                <div class="col-xs-12 col-sm-6">
                  <%= f.label :first_name %><br/>
                  <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
                </div>

                <div class="col-xs-12 col-sm-6">
                  <%= f.label :surname %><br/>
                  <%= f.text_field :surname, class:"form-control" %>
                </div>
              </div>


              <div class="form-row">
                <div class="col-12">
                  <%= f.label :email %><br />
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <small>@</small>
                      </div>
                    </div>
                    <%= f.email_field :email, class:"form-control" %>
                  </div>
                </div>
              </div>


              <div class="form-row">
                <div class="col-lg-6 col-xs-12">
                  <%= f.label :password %>
                  <%= f.password_field :password, class:"form-control" %>
                </div>

                <div class="col-lg-6 col-xs-12">
                  <%= f.label :password_confirmation %><br/>
                  <%= f.password_field :password_confirmation, class:"form-control" %>
                </div>
              </div>

              <div class="col-12 form-row">
                <div>
                  <input type="checkbox" style="width:15px">
                  <small class="text-muted">I would like to receive Health And Style Club newsletters.</small>
                </div>
                </br>
                <div>
                  <input type="checkbox" required="true" style="width:15px">
                  <small class="text-muted">I have read and agree with the Terms of Use and Privacy Policy of Health And Style Club.</small>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Create Account", class:"btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="border-top card-footer text-center"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>