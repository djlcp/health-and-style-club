<div class="content-section">
  <div class="content-wrap">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">

          <header class="card-header">
            <%= link_to "Log In", new_user_session_path, class:'float-right btn btn-outline-primary mt-1' %>
            <h4 class="card-title mt-2">Sign up</h4>
          </header>

          <div class="card-body">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :first_name %><br/>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"form-control", required: true %>
              </div>

              <div class="form-group">
                <%= f.label :surname %><br/>
                <%= f.text_field :surname, autofocus: true, autocomplete: "surname", class:"form-control", required: true %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class:"form-control", required: true %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", required: true %>
              </div>

              <div class="form-group">
                <input type="checkbox" style="width:15px">
                <small class="text-muted">I would like to receive Health And Style Club newsletters.
                  </br>
                <input type="checkbox" required="true" style="width:15px">
                 I have read and agree with the Terms of Use and Privacy Policy of Health And Style Club.
                </small>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", class:"btn btn-primary btn-block" %>
              </div>

          <% end %>
          </div>
          <div class="border-top card-body text-center">Already have an account? <%= link_to "Log In", new_user_session_path%></div>
        </div>
      </div>
    </div>
  </div>
</div>