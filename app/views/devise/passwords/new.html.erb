<%= devise_error_messages! %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <header class="card-header">
          <%= link_to "Create Account", new_user_registration_path, class: 'btn btn-outline-primary mt-1' %>
          <%= link_to "Log In", new_user_session_path, class: 'btn btn-outline-primary mt-1' %>
        </header>
        <div class="card-body">


          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="w-75" style="margin:auto">
              <div class="form-row">
                <%= f.label :email, "Please enter you email adress."%><br/>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="border-top card-footer text-center"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>
