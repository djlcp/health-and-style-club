<div class="d-flex justify-content-between top-nav-bar">
  <div class="row pl-3 nav-bar-icon">
    <%= link_to "https://www.facebook.com/healthandstyleclub" do %>
      <i class="fa fa-facebook-square p-2 top-nav-icon"></i>
    <% end %>
    <%= link_to "https://www.pinterest.com/healthandstyleclub" do %>
      <i class="fa fa-pinterest-square p-2 top-nav-icon"></i>
    <% end %>
    <%= link_to "https://www.youtube.com/channel/UCsZkZBLgd34toEDLrCHSfxw" do %>
      <i class="fa fa-youtube-square p-2 top-nav-icon"></i>
    <% end %>
    <%= link_to "https://twitter.com/healthstyleclub" do %>
      <i class="fa fa-twitter-square p-2 hover top-nav-icon"></i>
    <% end %>
  </div>

  <div class="row p-2">
    <%= link_to 'FAQ', faq_path, class:'top-navigation-link' %>
    <% if ! @signed_in%>
      <%= link_to 'sign up', new_user_registration_path, class:'top-navigation-link' %>
      <%= link_to 'login', new_user_session_path, class:'top-navigation-link' %>
    <% else %>
      <div class="dropdown mr-5">
        <a class="p-0" id="AccountMenu" data-toggle="dropdown"><i class="fa fa-user-circle p-0 m-0 top-nav-icon"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="AccountMenu">
          <%= link_to "View My Profile", "#{members_path}/#{current_user.id}", class: "dropdown-item" %>
          <%= link_to "Edit Account", "#{edit_user_registration_path}#account_change", class: "dropdown-item" %>
          <%= link_to "Edit Password", "#{edit_user_registration_path}#password_change", class: "dropdown-item" %>
          <%= link_to "Manage Subscription", subscriptions_path, class: 'dropdown-item' %></a>
        <div class="dropdown-divider"></div>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:'dropdown-item' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

