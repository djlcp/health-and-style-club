
<footer class="external-footer">

  <div class="container-fluid text-center text-md-left">
    <div class="row">
      <div class="col-md-4">
        <div class="nav-bar-icon">
          <h4 class="external-footer-logo">Health & Style Club</h4>
        </div>

        <div class="mt-3">
          <div class="d-flex">
            <%= link_to "https://www.facebook.com/healthandstyleclub" do %>
              <i class="fa fa-facebook-square external-footer-social-icon mr-4"></i>
            <% end %>
            <%= link_to "https://www.pinterest.com/healthandstyleclub" do %>
              <i class="fa fa-pinterest-square external-footer-social-icon mr-4"></i>
