<div class="header">
  <h4 class="user">users page</h4>

  <div class="select">
    <h4><%= link_to 'Posts', posts_path, class: 'button' %></h4>
    <h4><%= link_to 'Users', users_path, class: 'button' %></h4>
  </div>
</div>


<table>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.email, users_path(user), class:'tableitmes' %></td>
      <td class='tableitmes'><%= user.role %></td>
      <td><%= link_to 'Edit', edit_user_path(user), class:'tablelinks' %></td>
      <td><%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: "You sure?" },class:'tablelinks' %></td>
    </tr>
  <% end %>
</table>

<div class="admin">
<p><%= link_to 'add user', new_user_path, class: 'button' %></p>
<p><%= link_to 'Back', posts_path, class: 'button' %></p>
<p><%= link_to 'Logout Admin', destroy_user_session_path	, method: :delete, data: { confirm: "You sure?" }, class: 'button' %></p>
</div>
