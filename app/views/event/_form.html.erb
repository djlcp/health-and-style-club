<%= form_for @event do |form| %>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
