<div class="row d-flex justify-content-around col-12 m-auto" style="background-color:#ececec;">
  <% @posts.each do |post| %>

    <div class="card col-xs-12 col-sm-8 col-md-5 col-lg-4 col-xl-3 profile-card shadow mb-5 bg-white rounded">
      <%= render 'shared/post', post: post %>
    </div>
  <% end %>

</div>

<div style="float:left; padding-left:20px; padding-top:20px; padding-bottom:20px;">
  <% if current_user.try(:admin?) %>
<button type="button" class="btn btn-info" ><%= link_to 'New post', new_post_path, style:"color:#fff;" %></button>
<% end %>
</div>
